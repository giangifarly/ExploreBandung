<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.giangifarly.explorebandung">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_revisi"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_revisi"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExploreBandung">
        <activity
            android:name=".ui.AddWisataActivity"
            android:parentActivityName=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".ui.AddLocationActivity"
            android:exported="true"
            android:label="Tambah Lokasi Wisata Baru"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name" />
    </application>

</manifest>